extends layout

block content
    .container

        form(method='post', action='contact/send')
            h1 
            .form-group
                label Nombre
                input.form-control(type='text', name='name', placeholder='Ingrese su Nombre')
            .form-group
                label Email
                input.form-control(type='email', name='email', placeholder='Ingrese su Email')
            .form-group
                label Mensaje
                textarea.form-control(name='message', placeholder='Ingrese su Mensaje...')
            button.btn.btn-primary(type='submit') Enviar